
<div class="login">

  <div class="login-header">
    <h3>User ID Recovery</h3>
  </div>

  <div class="login-form">
    <form action="recoverUser" method="get">
      <h3>Email Address:</h3>
      <input type="text" placeholder="Email" id="email_address" name="email_address" required/><br>
      <input class="btn" type="submit" value="recover" />
      <br>
    </form>
    <br>

    <a class="sign-up" type="submit" value="createUser" href="createUser" > Sign Up!</a>
    <br/>



  <div class="flashbox">
  <% if flash.now[:alert] != nil %>
    <br />
    <hr />
    <%= flash[:alert] %>
  <% end %>
  </div>
</div>
</div>

<%= yield %>
